<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_black_border"
    android:padding="8dp">

    <TextView
        android:id="@+id/config_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingBottom="4dp"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/misans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorOutline"
        android:alpha="0.2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="320dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Overlay Button Size -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay_button_size"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/misans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <SeekBar
                        android:id="@+id/seekbar_button_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="32"
                        android:max="120"
                        android:progress="48"
                        android:progressTint="?attr/colorPrimary"
                        android:thumbTint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/text_button_size"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="48dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:fontFamily="@font/misans" />

                </LinearLayout>
            </LinearLayout>

            <!-- Overlay Button Opacity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay_button_opacity"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/misans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <SeekBar
                        android:id="@+id/seekbar_button_opacity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="0"
                        android:max="100"
                        android:progress="100"
                        android:progressTint="?attr/colorPrimary"
                        android:thumbTint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/text_button_opacity"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="100%"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:fontFamily="@font/misans" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/config_lock_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overlay_button_lock"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:fontFamily="@font/misans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overlay_button_lock_desc"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:fontFamily="@font/misans"
                        android:alpha="0.8" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_lock_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:thumbTint="?attr/colorPrimary"
                    android:trackTint="?attr/colorPrimary"
                    android:alpha="0.8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/config_autosprint_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/autosprint_keybind_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/misans" />

                <Button
                    android:id="@+id/btn_autosprint_keybind"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_spinner_dark"
                    android:text="CTRL_LEFT"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/misans"
                    android:textAllCaps="true" />

            </LinearLayout>

            <!-- Zoom Level -->
            <LinearLayout
                android:id="@+id/config_zoom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zoom_level_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/misans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <SeekBar
                        android:id="@+id/seekbar_zoom_level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="0"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="?attr/colorPrimary"
                        android:thumbTint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/text_zoom_level"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="50%"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:fontFamily="@font/misans" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/zoom_keybind_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/misans" />

                <Button
                    android:id="@+id/btn_zoom_keybind"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_spinner_dark"
                    android:text="C"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/misans"
                    android:textAllCaps="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/colorOutline"
        android:alpha="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_negative_cancel"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:fontFamily="@font/misans"
            android:textAllCaps="false"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/save"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="14sp"
            android:fontFamily="@font/misans"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>
