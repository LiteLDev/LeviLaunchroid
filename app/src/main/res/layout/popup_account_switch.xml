<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_menu_rounded"
    android:minWidth="120dp">

    <!-- Current account label -->
    <TextView
        android:id="@+id/label_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:text="@string/label_current_account"
        android:textColor="@color/on_surface"
        android:textSize="12sp"
        android:alpha="0.8" />
    
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <com.microsoft.xbox.idp.toolkit.CircleImageView
            android:id="@+id/header_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/header_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:textColor="@color/on_surface"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/manage_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:text="@string/manage_accounts"
            android:textColor="@color/on_surface"
            android:textSize="12sp"
            android:alpha="0.85"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_menu_item" />

    <!-- Other accounts label -->
    <TextView
        android:id="@+id/label_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:text="@string/label_other_accounts"
        android:textColor="@color/on_surface"
        android:textSize="12sp"
        android:alpha="0.8" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:overScrollMode="ifContentScrolls" />


</LinearLayout>